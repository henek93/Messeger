<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:background="@color/background_user_item"
    tools:background="@color/background_user_item">

    <LinearLayout
        android:id="@+id/linearLayoutUser"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@color/background_user_item"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewUserInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            tools:text="John smidt"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <View
            android:id="@+id/viewStatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="16dp"
            tools:background="@drawable/circle_red"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>